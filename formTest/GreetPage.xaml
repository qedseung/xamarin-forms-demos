<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		     x:Class="formTest.GreetPage"
			 BackgroundColor="Silver">
	<StackLayout x:Name="lo" VerticalOptions="Center" HorizontalOptions="Center" >
		<Label Text = "Time" x:Name="tl" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
		<Button Text="Start" x:Name="tb"></Button>
		<Button Text="Alert" Clicked = "Handle_Clicked"></Button>
		<Button Text="Action Sheet" Clicked = "Handle_Sheet"></Button>
		<Button Text="Click Me" x:Name = "but" Clicked = "Handle_ClickedCount"></Button>
		<Label Text="default" x:Name="sl"/>	
		<Slider ValueChanged="Handle_ValueChanged" x:Name="slid"/>
	</StackLayout>

</ContentPage>
